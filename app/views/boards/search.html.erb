<%= render "layouts/shared/header" %>
  
  <%= form_with(url: search_boards_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>

  <%=link_to 'もどる', root_path, class:"search-back-btn" %>

  <% end %>

  <div class="board-contents">
    <ul class="board-lists">
      <% @boards.each do |board| %>
      <li class="list">
        <%= link_to board_path(board.id) do %>
          <div class='board-img-content'>
              <%= image_tag board.image, class: "board-index-img" %>
          </div>
          <div class='board-info'>
            <p class='board-name'>
              <%= board.title %>
            </p>
          </div>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
<%= render "layouts/shared/footer" %>