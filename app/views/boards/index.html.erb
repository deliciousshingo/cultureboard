<%= render "layouts/shared/header" %>
<div class="contents">
  <div class="first-view">
    <img src="assets/Culture.jpeg" alt="トップ画面" class="top-image" >
  </div>
  <div class="board-wrap">
    <div class="board-index-text">
      <h2>【Culture一覧】</h2>
    </div>
  </div>

  <div class="search-box">
    <%= form_with(url: search_boards_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>

  <div class="board-contents">
    <ul class="board-lists">
      <% @boards.each do |board| %>
      <%= render partial: "list", locals: { board: board } %>
    <% end %>
    </ul>
  </div>

   <div class='board-btn'>
      <%= link_to new_board_path do %>
      <span class= "board-btn-text">投稿</span>
      <% end %>
    </div>
</div>
<%= render "layouts/shared/footer" %>