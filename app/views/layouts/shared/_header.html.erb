<header>
  <div class="heading">
    <h1 class="title"><%= link_to "CultureBoard", root_path %></h1>
  </div>

  <% if user_signed_in? %>
    <div class="user_nav">
      <div class="user_info">
      <%= link_to current_user.name,"/users/#{current_user.id}", class: "post" %> /    
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
  <% else %>
    <div class="user_info">
      <%= link_to "ログイン", new_user_session_path, class: "post" %>/
      <%= link_to "新規登録", new_user_registration_path, class: "post" %>
    </div>
    </div>
  <% end %>
  </div>
</header>